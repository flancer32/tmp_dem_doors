{
  "dBEAR": {
    "pack": {
      "Core": {
        "as": "core",
        "desc": "Core entities (rather meta data than domain data).",
        "entity": {}
      },
      "User": {
        "as": "user",
        "desc": "Package with user related entities (acl, etc.).",
        "pack": {
          "Nested": {
            "as": "nested",
            "desc": "nested package for example.",
            "entity": {}
          }
        },
        "entity": {
          "ACL": {
            "as": "acl",
            "desc": "Access control list",
            "attrs": {
              "Id": {
                "as": "entity_id",
                "desc": "User ID.",
                "increment": true
              }
            },
            "index": {
              "PK": {
                "type": "primary",
                "aliases": ["id"]
              }
            }
          },
          "Group": {
            "as": "group",
            "desc": "User group to use in relation.",
            "attrs": {
              "Id": {
                "as": "id",
                "desc": "User ID.",
                "nullable": false,
                "increment": true
              }
            },
            "index": {
              "PK": {
                "type": "primary",
                "aliases": ["id"]
              }
            }
          }
        }
      }
    },
    "entity": {
      "User": {
        "as": "user",
        "desc": "Any user who can login into the application (top level entity).",
        "attrs": {
          "Id": {
            "as": "id",
            "desc": "User ID.",
            "increment": true
          },
          "UserName": {
            "as": "username",
            "desc": "User's login name.",
            "text": true
          },
          "Email": {
            "as": "email",
            "desc": "User's email.",
            "text": true
          },
          "GroupRef": {
            "as": "group_ref",
            "desc": "User Group ref.",
            "integer": true,
            "unsigned": true
          }
        },
        "index": {
          "PK": {
            "type": "primary",
            "aliases": ["id"]
          }
        },
        "relation": {
          "toUserGroup": {
            "own": ["group_ref"],
            "ref": {
              "path": "/user/group",
              "attrs": ["id"]
            },
            "action": {"delete": "restrict", "update": "restrict"}
          }
        }
      }
    }
  }
}