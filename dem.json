{
  "dBEAR": {
    "pack": {
      "Core": {
        "as": "core",
        "desc": "Core entities (rather meta data than domain data).",
        "entity": {}
      },
      "User": {
        "as": "user",
        "desc": "Package with user related entities (acl, etc.).",
        "pack": {
          "Nested": {
            "as": "nested",
            "desc": "nested package for example.",
            "entity": {}
          }
        },
        "entity": {
          "Group": {
            "as": "group",
            "desc": "User group to use in relation.",
            "attr": {
              "Id": {
                "as": "id",
                "desc": "User ID.",
                "nullable": false,
                "type": {
                  "integer": {
                    "isUnsigned": true,
                    "isAutoincrement": true
                  }
                }
              }
            },
            "index": {
              "PK": {
                "type": "primary",
                "aliases": ["id"]
              }
            }
          }
        }
      }
    },
    "entity": {
      "User": {
        "as": "user",
        "desc": "Any user who can login into the application (top level entity).",
        "attr": {
          "Id": {
            "as": "id",
            "desc": "User ID.",
            "nullable": false,
            "type": {
              "integer": {
                "isUnsigned": true,
                "isAutoincrement": true
              }
            }
          },
          "GroupRef": {
            "as": "group_ref",
            "desc": "User Group ref.",
            "nullable": false,
            "type": {
              "integer": {
                "isUnsigned": true
              }
            }
          }
        },
        "index": {
          "PK": {
            "type": "primary",
            "aliases": ["id"]
          }
        },
        "relation": {
          "toUserGroup": {
            "own": ["group_ref"],
            "ref": {
              "path": "/user/group",
              "attrs": ["id"]
            },
            "action": {"delete": "restrict", "update": "restrict"}
          }
        }
      }
    }
  }
}